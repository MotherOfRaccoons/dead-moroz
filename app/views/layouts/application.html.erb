  </head>

  <body>

  <%= render "home/nav" %>

  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>">
      <a href="#" data-dismiss="alert" class="close">Ã—</a>
      <ul>
        <li>
          <%= value %>
        </li>
      </ul>
    </div>
  <% end %>

  <main class="container-fluid">
    <%= yield %>
   </main>
 </body>
</html>
