<div class="py-3 text-center">
  <h2><%= @user.first_name %>'s profile</h2>
</div>

<div class="col-12">
  <div class="row">
    <div class="col-3">
      <div class="text-center position-relative">
        <%= image_tag @user.avatar.url, size: '200x200', class: 'img-thumbnail', id: 'avatar-image', alt: 'Avatar' %>
      </div>
    </div>

    <div class="col-9">
      <div class="row my-2">
        <div class="col-4">
          <%= label_tag 'first_name' %>
          <%= text_field_tag 'first_name', @user.first_name, readonly: true, class: "form-control" %>
        </div>

        <div class="col-4">
          <%= label_tag 'last_name' %>
          <%= text_field_tag 'last_name', @user.last_name, readonly: true, class: "form-control" %>
        </div>

        <div class="col-4">
          <%= label_tag 'middle_name' %>
          <%= text_field_tag 'middle_name', @user.middle_name, readonly: true, class: "form-control" %>
        </div>
      </div>

      <div class="row my-2">
        <div class="col-12">
          <%= label_tag 'email' %>
          <%= text_field_tag 'email', @user.email, readonly: true, class: "form-control" %>
        </div>
      </div>      

      <div class="row my-2">
        <div class="col-6">
          <%= label_tag 'birthdate' %>
          <%= text_field_tag 'birthdate', @user.birthdate, readonly: true, class: "form-control" %>
        </div>

        <div class="col-6">
          <div class="">Gender</div>
          <div class="btn-group btn-group-toggle w-100 my-2" role="group">
            <%= radio_button_tag 'gender', 'male', @user.male?, class: "btn-check", disabled: true %>
            <%= label_tag 'gender_male', 'Male', class: "btn btn-outline-primary" %>

            <%= radio_button_tag 'gender', 'female', @user.female?, class: "btn-check", disabled: true %>
            <%= label_tag 'gender', "Female", class: "btn btn-outline-primary" %>

            <%= radio_button_tag 'gender', 'non_binary', @user.non_binary?, class: "btn-check", disabled: true %>
            <%= label_tag 'gender', "Other", class: "btn btn-outline-primary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="col-12 my-2">
  <%= label_tag 'address' %>
  <%= text_field_tag 'address', @user.address, readonly: true, class: "form-control" %>
</div>

<div class="col-12 my-2">
  <%= label_tag 'behavior' %>
  <%= text_area_tag 'address', @user.behavior, readonly: true, class: "form-control" %>
</div>

<div class="col-12 my-2">
  <%= link_to 'Gifts', user_gifts_path(@user), class: 'btn btn-outline-primary w-100' %>
</div>

<hr>
<h2 class="fw-light">Reviews:</h2>
<% @user.reviews_on.each do |review| %>

  <div class="card m-1 fs-5">
    <div class="card-body">
        <p>
          <%= review.body %>
          <%= link_to 'Remove', user_reviews_path(@user.id, id: review.id), method: :delete, data: { confirm: "Are you sure?" },
          class: 'btn btn-danger position-absolute top-0 end-0 m-3' %>
        </p>
        <footer class="blockquote-footer m-0">
          Added by <%= link_to review.reviewer.first_name, review.reviewer %> on <%= review.created_at.to_date %>
        </footer>
    </div>
  </div>
<% end %>
<hr> 

<%= button_tag 'Add a review', 'data-bs-toggle': 'modal', 'data-bs-target': '#review-modal', class: 'btn btn-primary mb-3' %>

<div class="modal fade modal-centered" id="review-modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">New Review</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <%= form_with model: [@user, @user.reviews_on.build], class: "needs-validation", html: { novalidate: true } do |form| %>
        <div class="modal-body">
         <%= form.text_area :body, id: 'review-body', class: 'form-control', required: true, minlength: 10, maxlength: 280 %>
          <div class="invalid-feedback">
            Review body has to be 10 to 280 characters long.
          </div>
        </div>
        <div class="modal-footer">
          <%= form.submit 'Submit a review', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= javascript_pack_tag 'users' %>
<%= javascript_pack_tag 'validation' %>
