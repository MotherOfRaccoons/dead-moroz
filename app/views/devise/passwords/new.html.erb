<main class="form-forgot-password">
  <h1 class="h3 fw-normal text-center py-4">Forgot your password?</h1>

  <%= form_with(model: resource, 
                scope: resource_name, 
                url: password_path(resource_name), 
                html: { class: "needs-validation", novalidate: true, method: :post }) do |f| 
  %>

    <%= render "shared/error_messages", resource: resource %>

    <%= f.label :email, class: "visually-hidden" %>
    <%= f.email_field :email,
                      required: true,
                      autofocus: true,
                      autocomplete: "email",
                      class: 'form-control',
                      placeholder: "Email address"
    %>
    <div class="invalid-feedback">
      Please enter a valid email address.
    </div>

    <%= f.submit "Restore password", class: 'w-100 btn btn-lg btn-primary my-3' %>
  <% end %>

  <div class="row"> 
    <div class="col-6">
      <%= link_to "Log in", new_session_path(resource_name), class: "w-100 btn btn-outline-primary" %>
    </div>
    <div class="col-6">
      <%= link_to "Sign up", new_registration_path(resource_name), class: "w-100 btn btn-outline-primary" %> 
    </div>
  </div>
</main>

<%= javascript_pack_tag 'validation' %>
