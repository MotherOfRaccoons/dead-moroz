<main class="form-signup container" >

  <div class="py-3 text-center">
    <h2>Registration</h2>
    <p class="lead">Fields marked with * are required.</p>
  </div>


  <%= form_with(model: resource, 
                scope: resource_name, 
                url: registration_path(resource_name), 
                html: { class: "needs-validation", novalidate: true }) do |f| 
  %>

    <div class="row g-3">

      <%= render "devise/shared/error_messages", resource: resource %>
          
      <%= render "user_info", f: f, new_account: true %>

      <%= f.submit "Sign up", class: 'btn btn-primary btn-lg w-100' %>

    </div>
  <% end %>
</main>   

<%= javascript_pack_tag 'validation' %>
