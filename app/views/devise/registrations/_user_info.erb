<div class="field">
  <%= f.label :first_name %><br />
  <%= f.text_field :first_name, autofocus: true, class: 'form-control mb-3' %>
</div>

<div class="field">
  <%= f.label :last_name %><br />
  <%= f.text_field :last_name, class: 'form-control mb-3' %>
</div>

<div class="field">
  <%= f.label :middle_name %><br />
  <%= f.text_field :middle_name, class: 'form-control mb-3' %>
</div>

<div class="field">
  <%= f.label :birthdate %><br />
  <%= f.date_select :birthdate, class: 'form-control mb-3' %>
</div>

<div class="field">
  <%= f.label :gender %><br />
  <%= f.select :gender, %w[male female non_binary], class: 'form-control mb-3' %>
</div>

<div class="field">
  <%= f.label :address %><br />
  <%= f.text_field :address, class: 'form-control mb-3' %>
</div>

<div class="field">
  <%= f.label :behavior %><br />
  <%= f.text_area :behavior, class: 'form-control mb-3' %>
</div>

<div class="field">
  <%= f.label :email %><br />
  <%= f.email_field :email, autocomplete: "email", class: 'form-control mb-3' %>
</div>